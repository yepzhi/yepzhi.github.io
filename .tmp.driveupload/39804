    <div class="container">
        <h1>Generador de Certificados Richmond</h1>
        <p class="subtitle">Crea certificados de participaci√≥n individuales o masivos</p>

        <div class="tabs">
            <button class="tab active" onclick="switchTab('individual')">Individual</button>
            <button class="tab" onclick="switchTab('masivo')">Carga Masiva</button>
        </div>

        <!-- TAB INDIVIDUAL -->
        <div class="tab-content active" id="individual">
            <form id="certificateForm">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" id="nombre" name="nombre" required placeholder="Ej: Juan">
                    <div class="error" id="nombreError">Por favor ingresa un nombre v√°lido</div>
                </div>

                <div class="form-group">
                    <label for="apellido">Apellido</label>
                    <input type="text" id="apellido" name="apellido" required placeholder="Ej: P√©rez">
                    <div class="error" id="apellidoError">Por favor ingresa un apellido v√°lido</div>
                </div>

                <div class="form-group">
                    <label for="evento">Nombre del Evento/Capacitaci√≥n</label>
                    <textarea id="evento" name="evento" required placeholder="Ej: Fostering Learning Communities session"></textarea>
                    <div class="error" id="eventoError">Por favor ingresa el nombre del evento</div>
