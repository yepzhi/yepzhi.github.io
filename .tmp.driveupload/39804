<body>
    <div class="container">
        <h1>Generador de Certificados Richmond</h1>
        <p class="subtitle">Crea certificados de asistencia de forma individual o masiva</p>

        <div class="tabs">
            <button class="tab active" onclick="switchTab('individual')">Individual</button>
            <button class="tab" onclick="switchTab('masivo')">Carga Masiva</button>
        </div>

        <!-- Tab Individual -->
        <div id="individual" class="tab-content active">
            <form id="certificateForm">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" id="nombre" name="nombre" required placeholder="Ej: Juan">
                </div>

                <div class="form-group">
                    <label for="apellido">Apellido</label>
                    <input type="text" id="apellido" name="apellido" required placeholder="Ej: P√©rez">
                </div>

                <div class="form-group">
                    <label for="sesion">Nombre de la Sesi√≥n</label>
                    <input type="text" id="sesion" name="sesion" required placeholder="Ej: Fostering Learning Communities">
                </div>

                <div class="form-group">
                    <label for="fecha">Fecha del Certificado</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>

                <div class="form-group">
                    <label for="horas">Duraci√≥n (horas)</label>
                    <input type="number" id="horas" name="horas" required placeholder="Ej: 2" min="0.5" step="0.5">
                </div>

                <button type="submit">Generar Certificado</button>
            </form>
        </div>

        <!-- Tab Masivo -->
        <div id="masivo" class="tab-content">
            <div class="info-box">
                <strong>Formato del archivo Excel (XLSX):</strong>
                Columnas requeridas: Nombre | Apellido | Sesion | Fecha | Horas<br>
                Fecha en formato: DD/MM/YYYY
            </div>

            <div class="form-group">
                <label for="fileUpload">Subir archivo Excel (XLSX)</label>
                <div class="file-upload">
                    <input type="file" id="fileUpload" accept=".xlsx,.xls" onchange="handleFileUpload(event)">
                    <div class="file-upload-text">
                        üìÅ Haz clic o arrastra tu archivo aqu√≠
                    </div>
                </div>
                <div class="file-name" id="fileName"></div>
            </div>

            <div class="progress-bar" id="progressBar">
                <div class="progress-fill" id="progressFill"></div>
            </div>

            <button onclick="processMassive()" id="generateMassiveBtn" disabled>Generar Certificados Masivos</button>
        </div>
    </div>

    <!-- Modal de confirmaci√≥n -->
    <div class="modal" id="successModal">
        <div class="modal-content">
            <div class="checkmark"></div>
            <h2 id="modalTitle">¬°Certificado Generado!</h2>
            <p id="modalMessage">El certificado ha sido descargado correctamente</p>
            <button onclick="closeModal()">Aceptar</button>
        </div>
    </div>

    <script>
        const { jsPDF } = window.jspdf;
        let massiveData = [];

        // Cambiar entre tabs
        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
        }

        // Formulario individual
        document.getElementById('certificateForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const nombre = document.getElementById('nombre').value.trim();
            const apellido = document.getElementById('apellido').value.trim();
            const sesion = document.getElementById('sesion').value.trim();
            const fecha = document.getElementById('fecha').value;
            const horas = document.getElementById('horas').value;

            generateCertificate(nombre, apellido, sesion, fecha, horas);
            
            document.getElementById('modalTitle').textContent = '¬°Certificado Generado!';
            document.getElementById('modalMessage').textContent = `Certificado de ${nombre} ${apellido} descargado correctamente`;
            document.getElementById('successModal').classList.add('active');
            
            this.reset();
        });

        // Manejo de archivo
        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (!file) return;

            document.getElementById('fileName').textContent = `Archivo: ${file.name}`;
            document.getElementById('generateMassiveBtn').disabled = false;

            const reader = new FileReader();
            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                massiveData = XLSX.utils.sheet_to_json(firstSheet);
            };
            reader.readAsArrayBuffer(file);
        }

        // Procesar carga masiva
        function processMassive() {
            if (massiveData.length === 0) {
                alert('No hay datos para procesar');
                return;
            }

            const progressBar = document.getElementById('progressBar');
            const progressFill = document.getElementById('progressFill');
            progressBar.classList.add('active');
            
            let processed = 0;
            const total = massiveData.length;

            massiveData.forEach((row, index) => {
                setTimeout(() => {
                    const nombre = row.Nombre || row.nombre || '';
                    const apellido = row.Apellido || row.apellido || '';
                    const sesion = row.Sesion || row.sesion || '';
                    const fecha = row.Fecha || row.fecha || '';
                    const horas = row.Horas || row.horas || '';

                    // Convertir fecha si viene en formato DD/MM/YYYY
                    let fechaISO = fecha;
                    if (fecha.includes('/')) {
                        const parts = fecha.split('/');
                        fechaISO = `${parts[2]}-${parts[1].padStart(2, '0')}-${parts[0].padStart(2, '0')}`;
                    }

                    generateCertificate(nombre, apellido, sesion, fechaISO, horas, index + 1);
                    
                    processed++;
                    const progress = (processed / total) * 100;
                    progressFill.style.width = progress + '%';

                    if (processed === total) {
                        setTimeout(() => {
                            progressBar.classList.remove('active');
                            progressFill.style.width = '0%';
                            document.getElementById('modalTitle').textContent = '¬°Certificados Generados!';
                            document.getElementById('modalMessage').textContent = `Se generaron ${total} certificados correctamente`;
                            document.getElementById('successModal').classList.add('active');
                        }, 500);
                    }
                }, index * 300);
            });
        }

        // Generar certificado PDF
        function generateCertificate(nombre, apellido, sesion, fecha, horas, index = '') {
            const doc = new jsPDF({
                orientation: 'landscape',
                unit: 'mm',
                format: 'a4'
            });

            // Patr√≥n geom√©trico izquierdo (azul)
            doc.setFillColor(44, 108, 218);
            for (let i = 0; i < 12; i++) {
                for (let j = 0; j < 8; j++) {
                    const x = i * 15;
                    const y = j * 15;
                    
                    if ((i + j) % 2 === 0) {
                        doc.triangle(x, y, x + 15, y, x, y + 15, 'F');
                        doc.setFillColor(255, 255, 255);
                        doc.triangle(x + 15, y, x + 15, y + 15, x, y + 15, 'F');
                        doc.setFillColor(44, 108, 218);
                    } else {
                        doc.triangle(x, y, x + 15, y, x + 15, y + 15, 'F');
                        doc.setFillColor(255, 255, 255);
                        doc.triangle(x, y, x, y + 15, x + 15, y + 15, 'F');
                        doc.setFillColor(44, 108, 218);
                    }
                }
            }

            // Barra lateral morada
            doc.setFillColor(139, 41, 126);
            doc.rect(0, 0, 35, 210, 'F');

            // Texto lateral
            doc.setTextColor(255, 255, 255);
            doc.setFontSize(16);
            doc.setFont('helvetica', 'normal');
            doc.text('Certificate of Achievement: Spelling Bee UTT 2025', 17.5, 105, {
                angle: 90,
                align: 'center'
            });

            // Logo Richmond Pro (simulado)
            doc.setFillColor(44, 108, 218);
            doc.circle(235, 30, 8, 'F');
            doc.setTextColor(44, 108, 218);
            doc.setFontSize(18);
            doc.setFont('helvetica', 'bold');
            doc.text('Richmond Pro', 245, 28);

            // Logo UTT (simulado)
            doc.setTextColor(139, 41, 126);
            doc.setFontSize(14);
            doc.setFont('helvetica', 'bold');
            doc.text('UTT', 270, 25);
            doc.setFontSize(8);
            doc.setFont('helvetica', 'normal');
            doc.text('Universidad Tecnol√≥gica', 260, 30);
            doc.text('de Tijuana', 267, 34);

            // Contenido principal
            doc.setTextColor(0, 0, 0);
            doc.setFontSize(11);
            doc.setFont('helvetica', 'normal');
            doc.text(`In recognition of the ${sesion} held at`, 148, 70, { align: 'center' });
            
            doc.setFontSize(12);
            doc.setFont('helvetica', 'bold');
            doc.text('Universidad Tecnol√≥gica de Tijuana, Richmond', 148, 78, { align: 'center' });
            
            doc.setFont('helvetica', 'normal');
            doc.text('proudly presents this award to the winners for their', 148, 86, { align: 'center' });
            doc.text('outstanding performance.', 148, 93, { align: 'center' });

            // Nombre completo
            doc.setFontSize(24);
            doc.setFont('helvetica', 'bold');
            const nombreCompleto = `${apellido} ${nombre}`;
            doc.text(nombreCompleto, 148, 115, { align: 'center' });

            // L√≠nea bajo el nombre
            doc.setDrawColor(200, 200, 200);
            doc.setLineWidth(0.5);
            doc.line(70, 120, 226, 120);

            // Texto de asistencia
            doc.setTextColor(0, 0, 0);
            doc.setFontSize(11);
            doc.setFont('helvetica', 'normal');
            doc.text(`For attending the ${sesion} session.`, 148, 132, { align: 'center' });

            // Fecha y horas
            const fechaFormateada = new Date(fecha + 'T00:00:00').toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            doc.text(`${fechaFormateada} (${horas} hours)`, 148, 142, { align: 'center' });

            // Logo Richmond Learning Platform (simulado)
            doc.setFillColor(219, 87, 155);
            doc.roundedRect(90, 165, 20, 20, 3, 3, 'F');
            doc.setTextColor(255, 255, 255);
            doc.setFontSize(10);
            doc.text('R', 100, 178, { align: 'center' });

            doc.setTextColor(0, 0, 0);
            doc.setFontSize(14);
            doc.setFont('helvetica', 'bold');
            doc.text('Richmond', 120, 173);
            doc.setFontSize(12);
            doc.setFont('helvetica', 'italic');
            doc.text('Learning', 120, 179);
            doc.setFont('helvetica', 'bold');
            doc.text('Platform', 120, 185);

            doc.setFontSize(10);
            doc.setFont('helvetica', 'normal');
            doc.text('...is for everyone', 120, 192);

            // Fecha y firma
            doc.setFontSize(10);
            doc.setTextColor(100, 100, 100);
            doc.text('Date', 180, 175);
            doc.setDrawColor(200, 200, 200);
            doc.line(180, 178, 240, 178);
            
            doc.setTextColor(139, 41, 126);
            doc.setFontSize(11);
            doc.text(fechaFormateada.replace(',', ''), 180, 185);

            doc.setTextColor(100, 100, 100);
            doc.setFontSize(10);
            doc.text('Richmond M√©xico', 245, 175);
            doc.setDrawColor(200, 200, 200);
            doc.line(245, 178, 285, 178);
            
            doc.setTextColor(139, 41, 126);
            doc.setFontSize(11);
            doc.text('Manuel Ram√≠rez', 245, 185);

            // Guardar PDF
            const fileName = index ? 
                `Certificado_${apellido}_${nombre}_${index}.pdf` : 
                `Certificado_${apellido}_${nombre}.pdf`;
            doc.save(fileName);
        }

        function closeModal() {
            document.getElementById('successModal').classList.remove('active');
        }
    </script>
</body>
</html>