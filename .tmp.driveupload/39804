    <script>
        const { jsPDF } = window.jspdf;
        let currentTab = 'individual';

        // Logo Richmond en base64 (peque√±o para header)
        const richmondLogo = "data:image/png;base64,";

        function switchTab(tab) {
            currentTab = tab;
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tab).classList.add('active');
        }

        // FORMULARIO INDIVIDUAL
        document.getElementById('certificateForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const nombre = document.getElementById('nombre').value.trim();
            const apellido = document.getElementById('apellido').value.trim();
            const evento = document.getElementById('evento').value.trim();
            const fecha = document.getElementById('fecha').value;
            const horas = document.getElementById('horas').value;

            let isValid = true;

            if (!nombre) {
                showError('nombreError');
                isValid = false;
            }

            if (!apellido) {
                showError('apellidoError');
                isValid = false;
            }

            if (!evento) {
                showError('eventoError');
                isValid = false;
            }

            if (!fecha) {
                showError('fechaError');
                isValid = false;
            }

            if (!horas || horas <= 0) {
                showError('horasError');
                isValid = false;
            }

            if (!isValid) return;

            generateCertificate(nombre, apellido, evento, fecha, horas);
            
            document.getElementById('modalTitle').textContent = '¬°Certificado Generado!';
            document.getElementById('modalMessage').textContent = 'El certificado ha sido generado y descargado correctamente';
            document.getElementById('successModal').classList.add('active');
            document.getElementById('certificateForm').reset();
        });

        // FORMULARIO MASIVO
        document.getElementById('massiveForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const fileInput = document.getElementById('excelFile');
            if (!fileInput.files.length) {
                showError('fileError');
                return;
            }

            const file = fileInput.files[0];
            await processExcelFile(file);
        });

        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (file) {
                document.getElementById('fileName').textContent = `üìÑ ${file.name}`;
            }
        }

        async function processExcelFile(file) {
            const reader = new FileReader();
            
            reader.onload = function(e) {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(firstSheet);

                    if (jsonData.length === 0) {
                        alert('El archivo est√° vac√≠o');
                        return;
                    }

                    generateMassiveCertificates(jsonData);
                } catch (error) {
                    alert('Error al procesar el archivo: ' + error.message);
                }
            };

            reader.readAsArrayBuffer(file);
        }

        async function generateMassiveCertificates(data) {
            const progressDiv = document.getElementById('progress');
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            const btn = document.getElementById('massiveBtn');

            progressDiv.style.display = 'block';
            btn.disabled = true;

            for (let i = 0; i < data.length; i++) {
                const row = data[i];
                const progress = ((i + 1) / data.length) * 100;
                
                progressFill.style.width = progress + '%';
                progressText.textContent = `Generando certificado ${i + 1} de ${data.length}...`;

                generateCertificate(
                    row.Nombre || row.nombre,
                    row.Apellido || row.apellido,
                    row.Evento || row.evento,
                    row.Fecha || row.fecha,
                    row.Horas || row.horas
                );

                await new Promise(resolve => setTimeout(resolve, 300));
            }

            progressDiv.style.display = 'none';
            btn.disabled = false;
            
            document.getElementById('modalTitle').textContent = '¬°Certificados Generados!';
            document.getElementById('modalMessage').textContent = `Se generaron ${data.length} certificados correctamente`;
            document.getElementById('successModal').classList.add('active');
            document.getElementById('massiveForm').reset();
            document.getElementById('fileName').textContent = '';
        }

function generateCertificate(nombre, apellido, evento, fecha, horas) {
  const doc = new jsPDF({
    orientation: 'landscape',
    unit: 'mm',
    format: 'a4'
  });

  const pageWidth = 297;
  const pageHeight = 210;

  // Fondo blanco
  doc.setFillColor(255, 255, 255);
  doc.rect(0, 0, pageWidth, pageHeight, 'F');

  // Bordes elegantes
  doc.setDrawColor(102, 126, 234);
  doc.setLineWidth(1.5);
  doc.rect(10, 10, pageWidth - 20, pageHeight - 20);

  doc.setDrawColor(118, 75, 162);
  doc.setLineWidth(0.5);
  doc.rect(15, 15, pageWidth - 30, pageHeight - 30);

  // Elementos decorativos
  doc.setFillColor(102, 126, 234, 0.1);
  doc.circle(25, 25, 15, 'F');
  doc.circle(pageWidth - 25, 25, 15, 'F');
  doc.circle(25, pageHeight - 25, 15, 'F');
  doc.circle(pageWidth - 25, pageHeight - 25, 15, 'F');

  // Logo Richmond o fallback
  try {
    doc.addImage(richmondLogo, 'PNG', pageWidth / 2 - 30, 25, 60, 12);
  } catch (e) {
    doc.setTextColor(102, 126, 234);
    doc.setFontSize(24);
    doc.setFont('helvetica', 'bold');
    doc.text('Richmond', pageWidth / 2, 35, { align: 'center' });
  }

  // T√≠tulo principal
  doc.setTextColor(102, 126, 234);
  doc.setFontSize(32);
  doc.setFont('helvetica', 'bold');
  doc.text('CERTIFICATE OF PARTICIPATION', pageWidth / 2, 65, { align: 'center' });

  // L√≠nea decorativa
  doc.setDrawColor(118, 75, 162);
  doc.setLineWidth(0.8);
  doc.line(pageWidth / 2 - 60, 70, pageWidth / 2 + 60, 70);

  // Subt√≠tulo
  doc.setTextColor(80, 80, 80);
  doc.setFontSize(14);
  doc.setFont('helvetica', 'italic');
  doc.text('Proudly presented to:', pageWidth / 2, 85, { align: 'center' });

  // Nombre del participante
  const nombreCompleto = `${nombre} ${apellido}`;
  doc.setTextColor(118, 75, 162);
  doc.setFontSize(36);
  doc.setFont('times', 'bold');
  doc.text(nombreCompleto, pageWidth / 2, 110, { align: 'center' });

  // L√≠nea bajo el nombre
  const nombreWidth = doc.getTextWidth(nombreCompleto);
  doc.setDrawColor(102, 126, 234);
  doc.setLineWidth(0.5);
  doc.line(pageWidth / 2 - nombreWidth / 2 - 10, 115, pageWidth / 2 + nombreWidth / 2 + 10, 115);

  // Texto descriptivo
  doc.setTextColor(60, 60, 60);
  doc.setFontSize(12);
  doc.setFont('helvetica', 'normal');
  doc.text('For successfully completing', pageWidth / 2, 132, { align: 'center' });

  // Evento
  doc.setTextColor(102, 126, 234);
  doc.setFontSize(16);
  doc.setFont('helvetica', 'bold');
  const maxWidth = 220;
  const eventoLines = doc.splitTextToSize(evento, maxWidth);
  let eventoY = 145;
  eventoLines.forEach(line => {
    doc.text(line, pageWidth / 2, eventoY, { align: 'center' });
    eventoY += 7;
  });

  // Fecha formateada
  const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
  let fechaFormateada;
  try {
    const partes = fecha.split('/');
    if (partes.length === 3) {
      const dia = parseInt(partes[0]);
      const mes = parseInt(partes[1]) - 1;
      const a√±o = parseInt(partes[2]);
      fechaFormateada = `${dia} de ${meses[mes]} de ${a√±o}`;
    } else {
      fechaFormateada = fecha;
    }
  } catch (e) {
    fechaFormateada = fecha;
  }

  // Fecha + horas
  doc.setTextColor(80, 80, 80);
  doc.setFontSize(11);
  doc.text(`${fechaFormateada} ‚Ä¢ ${horas} hour${horas != 1 ? 's' : ''}`, pageWidth / 2, eventoY + 10, { align: 'center' });

  // Sello decorativo
  doc.setDrawColor(118, 75, 162);
  doc.setLineWidth(1.5);
  doc.circle(pageWidth - 35, pageHeight - 35, 12);
  doc.setFontSize(8);
  doc.setTextColor(118, 75, 162);
  doc.setFont('helvetica', 'bold');
  doc.text('Richmond', pageWidth - 35, pageHeight - 37, { align: 'center' });
  doc.setFontSize(6);
  doc.setFont('helvetica', 'normal');
  doc.text('Certified', pageWidth - 35, pageHeight - 32, { align: 'center' });

  // Footer
  doc.setTextColor(150, 150, 150);
  doc.setFontSize(8);
  doc.setFont('helvetica', 'italic');
  const today = new Date();
  const fechaEmision = `${today.getDate()} de ${meses[today.getMonth()]} de ${today.getFullYear()}`;
  doc.text(`Certificate issued on: ${fechaEmision}`, pageWidth / 2, pageHeight - 20, { align: 'center' });

  // C√≥digo √∫nico
  const codigo = `RC-${Date.now().toString(36).toUpperCase()}`;
  doc.setFontSize(7);
  doc.text(`Certificate ID: ${codigo}`, pageWidth / 2, pageHeight - 15, { align: 'center' });

  // Descargar PDF
  doc.save(`Certificate_${nombreCompleto}.pdf`);
}
            // Guardar PDF
            const fileName = `Certificado_${nombre}_${apellido}.pdf`;
            doc.save(fileName);
        }

        function showError(errorId) {
            const errorElement = document.getElementById(errorId);
            errorElement.style.display = 'block';
            setTimeout(() => {
                errorElement.style.display = 'none';
            }, 3000);
        }

        function closeModal() {
            document.getElementById('successModal').classList.remove('active');
        }

        function downloadTemplate() {
            // Crear datos de ejemplo
            const templateData = [
                {
                    Nombre: "Juan",
                    Apellido: "P√©rez",
                    Evento: "Fostering Learning Communities session",
                    Fecha: "08/08/2025",
                    Horas: 2
                },
                {
                    Nombre: "Mar√≠a",
                    Apellido: "Garc√≠a",
                    Evento: "Advanced Teaching Strategies Workshop",
                    Fecha: "15/08/2025",
                    Horas: 3
                },
                {
                    Nombre: "Carlos",
                    Apellido: "Rodr√≠guez",
                    Evento: "Digital Education Tools Training",
                    Fecha: "22/08/2025",
                    Horas: 4
                }
            ];

            // Crear workbook
            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.json_to_sheet(templateData);

            // Ajustar columnas
            ws['!cols'] = [
                { wch: 15 },
                { wch: 15 },
                { wch: 45 },
                { wch: 15 },
                { wch: 8 }
            ];

            XLSX.utils.book_append_sheet(wb, ws, "Certificados");
            
            try {
                XLSX.writeFile(wb, "Plantilla_Certificados_Richmond.xlsx");
            } catch(e) {
                alert('Error al descargar la plantilla. Por favor intenta de nuevo.');
                console.error(e);
            }
        }
    </script>
</body>
