        <div class="section-card">
            <div class="section-title">‚úçÔ∏è Mis Reviews & Opiniones</div>
            <div id="reviewsContainer">
                <div class="loading">Cargando reviews...</div>
            </div>
        </div>
    </div>

    <script>
        let displayedReviews = 0;
        const reviewsPerLoad = 3;

        // CARGAR REVIEWS DESDE SHEETSDB
        async function loadMoreReviews() {
            const container = document.getElementById('reviewsContainer');

            try {
                const API_URL = 'https://api.sheetdb.io/v1/YOUR_API_KEY';

                const response = await fetch(API_URL);
                const data = await response.json();

                if (!data || data.length === 0) {
                    if (displayedReviews === 0) {
                        container.innerHTML = '<div class="empty-message">üìù A√∫n no hay reviews.</div>';
                    }
                    return;
                }

                if (displayedReviews === 0) {
                    container.innerHTML = '';
                }

                const endIndex = Math.min(displayedReviews + reviewsPerLoad, data.length);
                const newReviews = data.slice(displayedReviews, endIndex);

                newReviews.forEach((review) => {
                    const item = document.createElement('div');
                    item.className = 'news-item review';
                    item.innerHTML = `
                        <p class="news-item-title">${review.titulo || 'Sin t√≠tulo'}</p>
                        <p class="news-item-text">${review.contenido || review.content || ''}</p>
                        <div class="news-item-footer">
                            <span>${review.fecha || new Date().toLocaleDateString('es-ES')}</span>
                        </div>
                    `;

                    container.appendChild(item);
                });

                displayedReviews = endIndex;

                if (displayedReviews < data.length) {
                    if (!document.getElementById('loadMoreBtn')) {
                        const btn = document.createElement('button');
                        btn.id = 'loadMoreBtn';
                        btn.className = 'load-more-btn';
                        btn.textContent = 'Cargar m√°s reviews ‚Üí';
                        btn.onclick = () => {
                            btn.remove();
                            loadMoreReviews();
                        };
                        container.appendChild(btn);
                    }
                }
            } catch (error) {
                console.error('Error cargando reviews:', error);
                if (displayedReviews === 0) {
                    container.innerHTML = '<div class="empty-message">‚ö†Ô∏è Error al cargar reviews.</div>';
                }
            }
        }

        // Cargar las reviews al abrir
        loadMoreReviews();
    </script>
