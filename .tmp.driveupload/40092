    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-storage-compat.js"></script>

    <script>
        // üî• Configuraci√≥n de Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyB_H-Eu5PVkaWKanA0q7_Fo5LSPgBYhbhQ",
            authDomain: "hotfact-9902f.firebaseapp.com",
            projectId: "hotfact-9902f",
            storageBucket: "hotfact-9902f.firebasestorage.app",
            messagingSenderId: "33455575295",
            appId: "1:33455575295:web:77d406be9d4f6a6ec5fcca",
            measurementId: "G-LREVZ2WQ7L"
        };

        const app = firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();

        let currentUser, userData;

        // Verificar autenticaci√≥n
        auth.onAuthStateChanged(async (user) => {
            if (user) {
                currentUser = user;
                await loadUserData();
                await loadInvoices();
            } else {
                window.location.href = 'login.html';
            }
        });

        // Cargar datos del usuario
        async function loadUserData() {
            try {
                const doc = await db.collection('users').doc(currentUser.uid).get();
                userData = doc.data();
                
                document.getElementById('userName').textContent = userData.businessName;
                document.getElementById('userRFC').textContent = `RFC: ${userData.rfc}`;
                
                updateCertStatus();
                
                // Cargar logo si existe
                if (userData.logoURL) {
                    document.getElementById('logoPreview').innerHTML = `
                        <img src="${userData.logoURL}" style="max-width: 100%; max-height: 120px; border-radius: 10px;">
                    `;
                }
            } catch (error) {
                console.error('Error cargando datos:', error);
            }
        }

        // Actualizar estado de certificados
        function updateCertStatus() {
            const status = userData.hasCertificates ? '‚úÖ' : '‚ö†Ô∏è';
            const badge = userData.hasCertificates ? 'status-success' : 'status-warning';
            const text = userData.hasCertificates ? 'Configurado' : 'Pendiente';
            
            document.getElementById('certStatus').textContent = status;
            document.getElementById('certBadge').className = `status-badge ${badge}`;
            document.getElementById('certBadge').textContent = text;
        }

        // üé´ Generar Folio de Facturaci√≥n
        async function generateFolio() {
            const amount = parseFloat(document.getElementById('folioAmount').value);
            const description = document.getElementById('folioDescription').value.trim();
            const resultDiv = document.getElementById('folioResult');

            if (!amount || amount <= 0) {
                resultDiv.innerHTML = '<div class="error" style="margin-top: 15px;">Ingresa un monto v√°lido</div>';
                return;
            }

            try {
                // Crear folio en Firestore
                const folioData = {
                    userId: currentUser.uid,
                    businessName: userData.businessName,
                    businessRFC: userData.rfc,
                    amount: amount,
                    subtotal: amount / 1.16,
                    iva: amount - (amount / 1.16),
                    description: description || 'Sin descripci√≥n',
                    status: 'pending',
                    createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                    expiresAt: new Date(Date.now() + 30 * 24 * 60 * 60 * 1000) // 30 d√≠as
                };

                const docRef = await db.collection('folios').add(folioData);
                const folioId = docRef.id;

                // Generar enlace
                const folioLink = `${window.location.origin}/hotfact.html?folio=${folioId}`;

                resultDiv.innerHTML = `
                    <div class="folio-box">
                        <div style="color: white; font-weight: 600; margin-bottom: 10px;">
                            ‚úÖ Folio generado exitosamente
                        </div>
                        <div style="color: rgba(255,255,255,0.9); font-size: 13px; margin-bottom: 10px;">
                            Monto: ${amount.toFixed(2)} MXN (IVA incluido)
                        </div>
                        <div style="color: rgba(255,255,255,0.8); font-size: 12px; margin-bottom: 10px;">
                            Comparte este enlace con tu cliente:
                        </div>
                        <div class="folio-link">${folioLink}</div>
                        <button class="btn-copy" onclick="copyToClipboard('${folioLink}')">
                            üìã Copiar Enlace
                        </button>
                    </div>
                `;

                // Limpiar campos
                document.getElementById('folioAmount').value = '';
                document.getElementById('folioDescription').value = '';

            } catch (error) {
                console.error('Error generando folio:', error);
                resultDiv.innerHTML = '<div class="error" style="margin-top: 15px;">Error al generar folio</div>';
            }
        }

        // Copiar al portapapeles
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert('‚úÖ Enlace copiado al portapapeles');
            });
        }

        // Cargar facturas
        async function loadInvoices() {
            try {
                const snapshot = await db.collection('invoices')
                    .where('userId', '==', currentUser.uid)
                    .orderBy('createdAt', 'desc')
                    .limit(10)
                    .get();
                
                const tbody = document.getElementById('invoicesTable');
                
                if (snapshot.empty) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="5" style="text-align: center; padding: 30px;">
                                No hay facturas a√∫n. ¬°Crea tu primera factura!
                            </td>
                        </tr>
                    `;
                    return;
                }
                
                tbody.innerHTML = '';
                let total = 0;
                
                snapshot.forEach(doc => {
                    const invoice = doc.data();
                    total += invoice.amount;
                    
                    tbody.innerHTML += `
                        <tr>
                            <td>${invoice.folio}</td>
                            <td>${invoice.clientName}</td>
                            <td>$${invoice.amount.toFixed(2)}</td>
                            <td>${new Date(invoice.createdAt.toDate()).toLocaleDateString()}</td>
                            <td><span class="status-badge status-success">Timbrada</span></td>
                        </tr>
                    `;
                });
                
                document.getElementById('totalInvoices').textContent = snapshot.size;
                document.getElementById('totalAmount').textContent = `$${total.toFixed(2)}`;
            } catch (error) {
                console.error('Error cargando facturas:', error);
            }
        }

        // Modales
        function openCertModal() {
            document.getElementById('certModal').classList.add('active');
        }

        function closeCertModal() {
            document.getElementById('certModal').classList.remove('active');
        }

        function openInvoiceModal() {
            if (!userData.hasCertificates) {
                alert('Primero debes configurar tus certificados eFirma');
                openCertModal();
                return;
            }
            document.getElementById('invoiceModal').classList.add('active');
        }

        function closeInvoiceModal() {
            document.getElementById('invoiceModal').classList.remove('active');
        }

        // Manejo de archivos
        let cerFile = null;
        let keyFile = null;
        let logoFile = null;

        function handleCerUpload(event) {
            cerFile = event.target.files[0];
            if (cerFile) {
                document.getElementById('cerInfo').innerHTML = `
                    <div class="file-info">
                        <span class="file-name">üìÑ ${cerFile.name}</span>
                        <span class="file-remove" onclick="cerFile = null; document.getElementById('cerInfo').innerHTML = ''">√ó</span>
                    </div>
                `;
            }
        }

        function handleKeyUpload(event) {
            keyFile = event.target.files[0];
            if (keyFile) {
                document.getElementById('keyInfo').innerHTML = `
                    <div class="file-info">
                        <span class="file-name">üîë ${keyFile.name}</span>
                        <span class="file-remove" onclick="keyFile = null; document.getElementById('keyInfo').innerHTML = ''">√ó</span>
                    </div>
                `;
            }
        }

        // Manejo de logo
        function handleLogoUpload(event) {
            const file = event.target.files[0];
            if (!file) return;

            if (!file.type.match('image/png') && !file.type.match('image/jpeg')) {
                alert('Solo se permiten archivos PNG o JPG');
                return;
            }

            if (file.size > 500 * 1024) {
                alert('El archivo es muy grande. M√°ximo 500KB');
                return;
            }

            logoFile = file;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const logoDataURL = e.target.result;
                document.getElementById('logoPreview').innerHTML = `
                    <img src="${logoDataURL}" style="max-width: 100%; max-height: 120px; border-radius: 10px;">
                `;
                saveLogo(logoDataURL);
            };
            reader.readAsDataURL(file);
        }

        // Guardar logo en Firestore como base64
        async function saveLogo(logoDataURL) {
            if (!logoDataURL) return;

            try {
                await db.collection('users').doc(currentUser.uid).update({
                    logoURL: logoDataURL,
                    hasLogo: true,
                    logoUpdated: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                userData.logoURL = logoDataURL;
                alert('‚úÖ Logo guardado exitosamente');
            } catch (error) {
                console.error('Error guardando logo:', error);
                alert('Error al guardar logo');
            }
        }

        // Guardar certificados
        async function saveCertificates() {
            const password = document.getElementById('efirmaPassword').value;
            
            if (!cerFile || !keyFile || !password) {
                alert('Por favor completa todos los campos');
                return;
            }

            if (!isFirebaseConfigured) {
                alert('Demo: Los certificados se guardar√≠an en Firebase Storage');
                userData.hasCertificates = true;
                updateCertStatus();
                closeCertModal();
                return;
            }

            try {
                // Subir archivos a Firebase Storage
                const cerRef = storage.ref(`certificates/${currentUser.uid}/${cerFile.name}`);
                const keyRef = storage.ref(`certificates/${currentUser.uid}/${keyFile.name}`);
                
                await cerRef.put(cerFile);
                await keyRef.put(keyFile);
                
                // Guardar info en Firestore
                await db.collection('users').doc(currentUser.uid).update({
                    hasCertificates: true,
                    certificatePassword: password, // En producci√≥n, esto debe estar encriptado
                    certificatesUpdated: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                userData.hasCertificates = true;
                updateCertStatus();
                
                alert('‚úÖ Certificados guardados exitosamente');
                closeCertModal();
            } catch (error) {
                console.error('Error guardando certificados:', error);
                alert('Error al guardar certificados');
            }
        }

        // Crear factura
        async function createInvoice() {
            const clientRFC = document.getElementById('clientRFC').value.trim();
            const clientName = document.getElementById('clientName').value.trim();
            const amount = parseFloat(document.getElementById('invoiceAmount').value);
            const concept = document.getElementById('invoiceConcept').value.trim();
            
            if (!clientRFC || !clientName || !amount || !concept) {
                alert('Por favor completa todos los campos');
                return;
            }

            if (!isFirebaseConfigured) {
                alert('Demo: La factura se generar√≠a usando la API de Finkok');
                closeInvoiceModal();
                return;
            }

            try {
                // Aqu√≠ se integrar√° con Finkok
                const folio = `F-${Date.now()}`;
                
                await db.collection('invoices').add({
                    userId: currentUser.uid,
                    folio: folio,
                    clientRFC: clientRFC,
                    clientName: clientName,
                    amount: amount,
                    concept: concept,
                    createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                    status: 'timbrada'
                });
                
                alert('‚úÖ Factura generada exitosamente');
                closeInvoiceModal();
                await loadInvoices();
            } catch (error) {
                console.error('Error creando factura:', error);
                alert('Error al crear factura');
            }
        }

        // Copiar enlace del cliente
        function copyClientLink() {
            const link = window.location.origin + '/cliente.html?id=' + (currentUser?.uid || 'demo');
            navigator.clipboard.writeText(link).then(() => {
                alert('‚úÖ Enlace copiado al portapapeles');
            });
        }

        // Cerrar sesi√≥n
        async function handleLogout() {
            if (isFirebaseConfigured) {
                await auth.signOut();
            }
            window.location.href = 'index.html';
        }
    </script>
</body>
</html>